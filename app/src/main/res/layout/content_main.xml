<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:padding="40dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    >

   <!-- <TextView android:text="Hello World!" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acesse sua Conta"
        android:drawableTop="@drawable/ic_seguranca"
        android:gravity="center"
        android:id="@+id/txtAcesso"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/txtSimulador"
        android:layout_alignEnd="@+id/txtSimulador" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Simulador\n de Habitação"
        android:id="@+id/txtSimulador"
        android:drawableTop="@drawable/ic_casa1"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefone"
        android:id="@+id/txtFone"
        android:gravity="center"
        android:drawableTop="@drawable/ic_telefone"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txtSimulador"
        android:layout_alignEnd="@+id/txtSimulador" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loterias CAIXA"
        android:id="@+id/txtLoterias"
        android:gravity="center"
        android:drawableTop="@drawable/ic_luck"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atendimento"
        android:id="@+id/txtAtendimento"
        android:gravity="center"
        android:drawableTop="@drawable/ic_ballon"
        android:layout_below="@+id/txtSimulador"
        android:layout_alignLeft="@+id/txtLoterias"
        android:layout_alignStart="@+id/txtLoterias" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calendário"
        android:id="@+id/txtCalendario"
        android:gravity="center"
        android:drawableTop="@drawable/ic_calendario1"
        android:layout_alignBottom="@+id/txtFone"
        android:layout_alignRight="@+id/txtAtendimento"
        android:layout_alignEnd="@+id/txtAtendimento"
        />


</RelativeLayout>
